        break
        ;;

    esac
  done

  action="diff"

  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      --staged | -s)

        args['--staged']=1
        shift
        ;;

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)

        printf "invalid argument: %s\n" "$key" >&2
        exit 1

        ;;

    esac
  done

  filter_error=$(filter_recipe_book_directory)
  if [[ -n $filter_error ]]; then
    echo "$filter_error" >&2
